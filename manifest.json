{
	"manifest_version"	: 2,
	"name"				: "GoT New Message Auto Show",
	"short_name"		: "GoT AutoShow",
	"description"		: "Automatically show new messages when they are posted to the Gathering Of Tweakers forum thread.",
	"version"			: "0.2.4",
	"homepage_url"		: "https://www.Redsandro.com/",

	"permissions": [
		"*://gathering.tweakers.net/*",
		"tabs"
	],

	"web_accessible_resources": [
		"inject.js"
	],

	"background"	: {
		"persistent"	: false,
		"scripts"		: ["background.js"]
	},

	"content_scripts"	: [{
		"all_frames"	: true,
		"js"			: ["content.js"],
		"matches"		: ["*://gathering.tweakers.net/forum/*"],
		"run_at"		: "document_start"
	}],

	"icons"				: {
		"19"	: "icon_19.png",
		"48"	: "icon_48.png",
		"64"	: "icon_64.png",
		"128"	: "icon_128.png"
	},

	"content_security_policy"	: "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

	"page_action": {
		"default_title": "GoT AutoShow"
	}
}
